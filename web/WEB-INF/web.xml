<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>by.Controller.EmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletPoisk</servlet-name>
        <servlet-class>by.Controller.PoiskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletPoisk</servlet-name>
        <url-pattern>/PoiskController</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>by.Controller.LoginController</servlet-class>
</servlet>
    <servlet>
        <servlet-name>ServletCounter</servlet-name>
        <servlet-class>by.Controller.ServletCounter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCounter</servlet-name>
        <url-pattern>/counter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FilterExample</filter-name>
        <filter-class>by.Controller.FilterExample</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FilterExample</filter-name>
        <!--<servlet-name>servlet</servlet-name>-->
        <url-pattern>/employee</url-pattern>
    </filter-mapping>
</web-app>